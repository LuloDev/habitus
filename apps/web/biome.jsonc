{
	"files": {
		"ignore": [
			"node_modules",
			"test-results",
			".output",
			"/build",
			".svelte-kit",
			"build",
			"dist",
			"public/build",
			".env",
			".env.*",
			"!.env.example",
			"!.env.test",
			"src/lib/paraglide/"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	]
}
